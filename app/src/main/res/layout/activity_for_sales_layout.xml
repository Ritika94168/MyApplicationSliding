<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="30dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"

            >

            <TextView
                android:id="@+id/sales_date4"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewShortDesc"
                android:layout_alignParentLeft="true"

                android:layout_marginTop="40dp"
                android:text="Total Sale"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#009688"


                card_view:fontFamily="monospace" />

            <TextView
                android:id="@+id/sales_date3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewShortDesc"
                android:layout_alignParentRight="true"

                android:layout_marginTop="40dp"
                android:text="Cancelled Amount"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#009688"


                card_view:fontFamily="monospace" />
            <TextView
                android:id="@+id/sales_date2"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewShortDesc"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="80dp"
                android:text="Sales date"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#009688"

                android:textStyle="bold"
                card_view:fontFamily="monospace" />

            <TextView
                android:id="@+id/sales_date"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewShortDesc"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="100dp"
                android:text="23/9/2019"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textStyle="bold"
                card_view:fontFamily="monospace" />


            <TextView
                android:id="@+id/amount"
                android:layout_width="189dp"
                android:layout_height="41dp"

                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="   45000 RS"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                card_view:fontFamily="monospace" />

            <TextView
                android:id="@+id/cancelled_amount"
                android:layout_width="120dp"
                android:layout_height="36dp"

                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="13dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:text="2000 Rs"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:textStyle="bold"
                card_view:fontFamily="monospace" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>